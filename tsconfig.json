{
    "compilerOptions": {
        "target": "ES2021",
        "resolveJsonModule": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "moduleDetection": "force",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "outDir": "dist",
        "types": [
            "node"
        ]
    },
    "include": [
        "src"
    ]
}